{
    "name": "yassnippet",
    "displayName": "yassnippet",
    "description": "Use your yassnippets in vscode",
    "version": "0.0.1",
    "publisher": "mads-hartmann",
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.insertSnippet"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.insertSnippet",
                "title": "Insert Yassnippet"
            }
        ]
    },
    "configuration": {
      "type": "object",
      "title": "Yassnippet configuration",
      "properties": {
          "yassnippet.path": {
            "type": "string",
            "default": ".snippets",
            "description": "The path to the folder that contains snippets. Can be either an absolute path, otherwise it's to be relative to the users home directory"
        }
      }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
